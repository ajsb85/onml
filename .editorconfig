# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,ts,jsx,tsx,json,yml,yaml,md}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# TypeScript-specific settings
[*.{ts,tsx}]
# (You can override settings for specific file types here)

# Markdown specific settings
[*.md]
trim_trailing_whitespace = false  # Some people prefer to use two spaces for hard line breaks

# YAML files
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
# No specific settings, inherits from general settings

# .gitignore and similar files
[.gitignore]
# Usually, no specific settings, but you could add:
# indent_style = space
# indent_size = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# Github Actions files
[.github/workflows/*.yml]
#  (No specific settings, inherits from the yml configuration)