{
  "compilerOptions": {
    "target": "es2015",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["es2015", "dom"],
    "declaration": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "sourceMap": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"],
  "exclude": [
    "node_modules",
    "build",
    "build-cjs",
    "**/*.config.js"
  ]
}
